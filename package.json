{
	"name": "pairodoro",
	"displayName": "Pairodoro",
	"description": "Pairing Timer",
	"publisher": "FordLabs",
	"license": "MIT",
	"version": "1.4.0",
	"icon": "logo.png",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/FordLabs/pairodoro.git"
	},
	"activationEvents": [
		"onCommand:extension.pairodoro"
	],
	"keywords": [
		"paired programming",
		"pair",
		"pairing",
		"pomodoro"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.pairodoro",
				"title": "Pairodoro"
			}
		],
		"keybindings": [
			{
				"command": "extension.pairodoro",
				"key": "shift+cmd+p"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Pairodoro Config",
			"properties": {
				"pairodoro.player1": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"default": "Player 1",
							"description": "Name of first pair"
						},
						"color": {
							"type": "string",
							"default": "#468b5d",
							"description": "Text color for first pair"
						}
					}
				},
				"pairodoro.player2": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"default": "Player 2",
							"description": "Name of second pair"
						},
						"color": {
							"type": "string",
							"default": "#408b5d",
							"description": "Text color for second pair"
						}
					}
				},
				"pairodoro.seconds": {
					"type": "integer",
					"default": "120",
					"description": "Seconds until pair swap"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
